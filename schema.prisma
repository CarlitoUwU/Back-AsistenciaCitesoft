generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tb_asistencia {
  id          String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  usuario_id  String      @db.Uuid
  weekday     weekday
  hora_init   DateTime    @default(now()) @db.Time(6)
  hora_fin    DateTime?   @db.Time(6)
  tb_usuarios tb_usuarios @relation(fields: [usuario_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "constraint_1")
}

model tb_usuarios {
  id            String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  first_name    String?         @db.VarChar
  last_name     String?         @db.VarChar
  is_active     Boolean?
  email         String?         @db.VarChar
  tb_asistencia tb_asistencia[]
}

enum Weekday {
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
  sunday
}

enum weekday {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}
